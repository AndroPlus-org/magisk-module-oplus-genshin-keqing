<?xml version='1.0' encoding='utf-8' standalone='yes' ?>
<GroupLayout
    gravity="center"
    groupLayout="vertical"
    height="match_parent"
    width="match_parent">

    <ImageClockView
        width="190"
        height="190"
        hourHandName="aod_clock_drawable_dial_hour"
        minuteHandName="aod_clock_drawable_dial_minute"
        centerName="aod_clock_drawable_dial_radius"
        backgroundName="aod_clock_drawable_dial_bg"
        imageOrder="hour|minute|center"
        supportCustomize="true"
        zoomX="1.34"
        zoomY="1.34"/>
    <GroupLayout
        gravity="center"
        groupLayout="vertical"
        isRootGradient="true"
        height="wrap_content"
        width="wrap_content"
        marginStart="0"
        marginTop="0">
        <GroupLayout
            groupLayout="vertical"
            isRootGradient="true"
            height="wrap_content"
            width="wrap_content"
            gravity="center"
            marginStart="0"
            marginTop="3">

            <DateView
                alignment="center"
                direction="horizontal"
                width="wrap_content"
                height="wrap_content"
                marginTop="2"
                textSize="14"
                typefacePath="normal"
                linearGradientStart="lt"
                linearGradientEnd="rb"
                supportVisiableDate="true"
                supportGradientColors="true"
                linearGradientColors="#FFFFFF|#FFFFFF"
                visibility="visiable"
                zoomX="1.0"
                zoomY="1.0"/>

            <LunarView
                alignment="center"
                direction="horizontal"
                width="wrap_content"
                height="wrap_content"
                textSize="14"
                marginTop="2"
                typefacePath="normal"
                linearGradientStart="lt"
                linearGradientEnd="rb"
                supportVisiableLunar="true"
                supportGradientColors="true"
                linearGradientColors="#FFFFFF|#FFFFFF"
                visibility="gone"
                zoomX="1.0"
                zoomY="1.0"/>

            <AodUvTextView

                alignment="center"
                direction="horizontal"
                width="wrap_content"
                height="wrap_content"
                textSize="14"
                marginTop="2"
                typefacePath="normal"
                linearGradientStart="lt"
                linearGradientEnd="rb"
                supportVisibleUV="true"
                supportGradientColors="true"
                linearGradientColors="#FFFFFF|#FFFFFF"
                visibility="gone"
                zoomX="1.0"
                zoomY="1.0"/>

            <AodMediaView
                alignment="center"
                direction="horizontal"
                width="wrap_content"
                height="wrap_content"
                maxWidth="200"
                marginTop="2"
                textSize="14"
                linearGradientStart="lt"
                linearGradientEnd="rb"
                supportVisiableMedia="true"
                supportGradientColors="true"
                linearGradientColors="#FFFFFF|#FFFFFF"
                visibility="visiable"
                zoomX="1.0"
                zoomY="1.0"/>

            <BatteryView
                marginTop="2"
                width="wrap_content"
                height="wrap_content"
                textSize="14"
                showPercent="true"
                typefacePath="normal"
                direction="horizontal"
                linearGradientStart="lt"
                linearGradientEnd="rb"
                supportGradientColors="true"
                supportVisiableBattery="true"
                linearGradientColors="#FFFFFF|#FFFFFF"
                visibility="visiable"
                zoomX="1.0"
                zoomY="1.0"/>
        </GroupLayout>
        <GroupLayout
            height="wrap_content"
            width="wrap_content"
            groupLayout="horizontal"
            gravity="center"
            marginStart="0"
            marginTop="20">
            <NotificationView
                width="wrap_content"
                height="wrap_content"
                linearGradientStart="lt"
                linearGradientEnd="rb"
                supportVisiableNotification="true"
                supportGradientColors="true"
                supportDirection="true"
                linearGradientColors="#FFFFFF|#FFFFFF"
                visibility="visiable"
                zoomX="1.0"
                zoomY="1.0"/>
        </GroupLayout>
    </GroupLayout>
</GroupLayout>